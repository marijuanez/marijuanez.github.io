{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**"
    ],
    "rewrites": [
      {
        "source": "/api/contact",
        "function": "submitContact"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
